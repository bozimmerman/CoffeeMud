<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">

<html>
<head>
	<META CHARSET="utf-8"/>
	<link rel="coffeemud icon" href="images/coffeemud.ico" >
	<!-- tell spiders to sod off -->
	<meta name="ROBOTS" content="NOINDEX, NOFOLLOW">
	<link rel="STYLESHEET" TYPE="TEXT/CSS" HREF="coffeemud.css">
	<title>Player Access Login</title>
	<script language=JavaScript>
	<!--
		function Clicked(action)
		{
			document.ACCESS.action=action;
			document.ACCESS.submit();
		}
		function ClickedClan(clanname,action)
		{
			document.ACCESS.CLAN.value=clanname;
			document.ACCESS.action=action;
			document.ACCESS.submit();
		}
		function Register()
		{
			document.ACCESS.LASTPAGE.value='/access.cmvp';
			Clicked('register.cmvp');
		}
		
		function Forgot()
		{
			document.ACCESS.LASTPAGE.value='/access.cmvp';
			Clicked('forgot.cmvp');
		}
		function Logout(action)
		{
			document.cookie = 'CMAUTH=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/';
			document.ACCESS.action=action;
			document.ACCESS.submit();
		}
	//-->
	</SCRIPT>
</head>

<body BGCOLOR="#F5F5F5">
	@if?!Authenticate@ 
		<CENTER>
		<TABLE WIDTH=400 BORDER=0 CELLPADDING=15>
		<TR><TD BGCOLOR=WHITE>
		
		<h2><FONT COLOR="#333333">Player Access Login</FONT></H2>
		<hr SIZE=1 COLOR="#CCCCCC">
		<a href="/"><FONT COLOR="#0066CC"><u>‚Üê Back to public pages</u></FONT></A><br>
		<br><INPUT TYPE=HIDDEN NAME=LASTPAGE VALUE="">
		<FORM  ACCEPT-CHARSET="UTF-8" NAME=ACCESS METHOD=POST ACTION=access.cmvp TARGET=_top>
		@if?IsAccountSystem@
			<FONT COLOR="#666666">Please enter one of your characters and your Account password to gain access.<BR>
			If you do not have an account or any characters, click the Back link above and select Play NOW!</FONT><P>
	    @else@
			<FONT COLOR="#666666">Please login as your player to gain access.<BR>
			If you do not have a player account, click the Back link above and select Play NOW!</FONT><P>
	    @endif@
		<TABLE WIDTH=100% BORDER=0 CELLPADDING=6 CELLSPACING=0>
		<TR><TD COLSPAN=2 ALIGN=CENTER BGCOLOR="#4A4A4A"><FONT COLOR=WHITE><B>Player Login</B></FONT></TD></TR>
		<TR><TD WIDTH=35% BGCOLOR="#F9F9F9"><FONT COLOR="#333333"><B>Login:</B></FONT></TD><TD WIDTH=65% BGCOLOR=WHITE><INPUT TYPE=TEXT SIZE=20 NAME=LOGIN></TD></TR>
		<TR><TD BGCOLOR="#F9F9F9"><FONT COLOR="#333333"><B>Password:</B></FONT></TD><TD BGCOLOR=WHITE><INPUT TYPE=PASSWORD SIZE=20 NAME=PASSWORD></TD></TR>
		<TR><TD COLSPAN=2 ALIGN=CENTER BGCOLOR="#F0F0F0">
			<FORM  ACCEPT-CHARSET="UTF-8" NAME=ACCESS METHOD=POST ACTION=/access.cmvp TARGET=_top>
			<INPUT TYPE=SUBMIT NAME=LOGINBUTTON VALUE="  Login  ">
			@if?IsAccountSystem@
				<INPUT TYPE=HIDDEN NAME=LASTPAGE VALUE="">
				<INPUT TYPE=BUTTON VALUE=" Register " ONCLICK="Register()">
			@endif@
			</FORM>
		</TD></TR>
		</TABLE>
		@if?MudInfo?REALEMAILOK@
		<BR>
		<a href="javascript:Forgot()"><FONT SIZE=-1 COLOR="#0066CC"><u>I forgot my account name or password.</u></FONT></A>
		@endif@
		
		</TD></TR>
		</TABLE>
		</CENTER>
		</FORM>
	@else@
		<FORM  ACCEPT-CHARSET="UTF-8" NAME=ACCESS METHOD=POST ACTION=/access.cmvp TARGET=_top>
		<INPUT TYPE=HIDDEN NAME=AUTHPLAYER VALUE="@Authenticate?SETPLAYER@">
		<INPUT TYPE=HIDDEN NAME=PLAYER VALUE="@PlayerData?NAME@">
		<INPUT TYPE=HIDDEN NAME=CLAN VALUE="">
		
		<CENTER>
		<TABLE WIDTH=600 BORDER=0 CELLPADDING=15>
		<TR><TD BGCOLOR=WHITE>
		
		<TABLE WIDTH=100% BORDER=0>
		<TR>
		<TD WIDTH=120 VALIGN=TOP><IMG src="images/logo.gif"></TD>
		<TD VALIGN=TOP>
		<H2><FONT COLOR="#333333">Welcome @PlayerData?NAME@!</FONT></H2>
		<hr SIZE=1 COLOR="#CCCCCC">
		
		<TABLE WIDTH=100% BORDER=0 CELLPADDING=8 CELLSPACING=0>
		<TR><TD BGCOLOR="#4A4A4A" ALIGN=CENTER><FONT COLOR=WHITE SIZE=4><B>Menu</B></FONT></TD></TR>
		<TR><TD BGCOLOR="#F9F9F9">
			<UL>
			<LI><A href="javascript:Clicked('stats.cmvp')"><FONT COLOR="#0066CC"><B>Player Statistics</B></FONT></a>
			<LI><A href="javascript:Clicked('channels.cmvp')"><FONT COLOR="#0066CC"><B>Channel Backlogs</B></FONT></a>
			@if?MudInfo?EMAILOK@
			<LI><A href="javascript:Clicked('email.cmvp')"><FONT COLOR="#0066CC"><B>Player Email</B></FONT></a>
			@endif@
			<LI><A href="javascript:Clicked('picture.cmvp')"><FONT COLOR="#0066CC"><B>Character Portrait</B></FONT></a>
			<LI><A href="javascript:Clicked('forums.cmvp')"><FONT COLOR="#0066CC"><B>Forums</B></FONT></a>
			<LI><A href="javascript:Clicked('bankaccts.cmvp')"><FONT COLOR="#0066CC"><B>Bank Accounts</B></FONT></a>
			<LI><A href="javascript:Clicked('stocks.cmvp')"><FONT COLOR="#0066CC"><B>Stocks</B></FONT></a>
			@PlayerData?PLAYERCLANRESET@
			@loop@
				@PlayerData?PLAYERCLANNEXT@
				@AddRequestParameter?CLANENC=@@ClanID@@ @
				<LI><A href="javascript:Clicked('/clan/@RequestParameterEncoded?CLANENC@/index.cmvp')"><FONT COLOR="#0066CC"><B>@ClanID@</B></FONT></a>
			@back@
			<LI><A href="javascript:Clicked('index.cmvp')"><FONT COLOR="#0066CC"><B>Public Pages</B></FONT></a>
			<LI><A href="javascript:Logout('index.cmvp')"><FONT COLOR="#0066CC"><B>Logout</B></FONT></a>
			</UL>
		</TD></TR>
		</TABLE>
		
		
		</TD>
		</TR>
		</TABLE>
		
		</TD></TR>
		</TABLE>
		</CENTER>
		</FORM>
	@endif@
</body>
</html>
