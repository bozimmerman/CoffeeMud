<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">
<META HTTP-EQUIV="Pragma" CONTENT="no-cache">
@if?!Authenticate@ @AddFile?/grinder/failedlogin.cmvp@ @else@
@if?!CheckAuthCode?AUTH_CMDQUESTS=true@ @AddFile?/grinder/nopriv.cmvp@ @else@
<html>
	<META CHARSET="utf-8"/>
<head>
    <link rel="grinder icon" href="/images/grinder.ico" >
    <link rel="STYLESHEET" TYPE="TEXT/CSS" HREF="grinder.css">
    <title>Holidays List</title>
    <script language=JavaScript>
    <!--
        function Holiday(action)
        {
            if(action=='' || action.startsWith('&NEWHOLIDAY'))
            {
                window.alert('You must enter a name for the holiday.');
                document.RESOURCES.NEWHOLIDAY.value='holiday number '+Math.random();
            }
            else
            {
                var strFeatures="top=0,left=75,resizeable=no,scrollbars=yes,height=600,width=750,alwaysRaised=yes,dependent=yes";
                w=window.open("holiday.cmvp?HOLIDAY="+action,"Holiday",strFeatures, false);
            }
        }
        function Clicked(action)
        {
            document.RESOURCES.action=action;
            document.RESOURCES.submit();
        }
        function Refresh()
        {
            document.RESOURCES.action='holidays.cmvp';
            document.RESOURCES.submit();
        }
    //-->
    </script>
</head>
<body BGCOLOR=BLACK>
    <TABLE WIDTH=100% BORDER=0>
    <TR>
    <TD WIDTH=33% ALIGN=LEFT VALIGN=TOP></TD>
    <TD WIDTH=33% ALIGN=CENTER VALIGN=TOP><IMG SRC="/grinder/images/grinder.gif" WIDTH=78 HEIGHT=122 ALT="" BORDER="0"></TD>
    <TD WIDTH=33% ALIGN=RIGHT VALIGN=TOP>
        <TABLE WIDTH=50% BORDER=1>
        <TR><TD BGCOLOR=WHITE ALIGN=CENTER><FONT COLOR=BLACK SIZE=-1><B>Menu</B></FONT></TD></TR>
        <TR><TD><a href="javascript:Clicked('/grinder/loggedin.cmvp');"><FONT COLOR=WHITE SIZE=-1><B>MUDGrinder Menu</B></FONT></A></TD></TR>
        <TR><TD><a href="javascript:Refresh();"><FONT COLOR=WHITE SIZE=-1><B>Refresh Page</B></FONT></A></TD></TR>
        </TABLE>
    </TD>
    </TR>
    </TABLE>
<CENTER>
<FORM  ACCEPT-CHARSET="UTF-8" NAME=RESOURCES TARGET=_top METHOD=POST ACTION="holidays.cmvp">

    <TABLE WIDTH=100% BORDER=1>
    <TR><TD WIDTH=100% COLSPAN=6 BGCOLOR=WHITE ALIGN=CENTER><FONT COLOR=BLACK><H2>CoffeeMud @MudServerVersion@ Holiday Manager</H2></FONT></TD></TR>
	<TR>
    <TD WIDTH=25%><B><FONT COLOR=YELLOW>Name</FONT></b></TD>
    <TD WIDTH=30%><B><FONT COLOR=YELLOW>Area(s)</FONT></b></TD>
    <TD WIDTH=30%><B><FONT COLOR=YELLOW>Schedule</FONT></B></TD>
    <TD WIDTH=15%><B><FONT COLOR=YELLOW>Duration</FONT></B></TD>
    </TR>
    @HolidayNext?RESET@
    @loop@
    @HolidayNext@
    <TR>
    <TD><a href="javascript:Holiday('@HolidayID@')"><FONT COLOR="#FFFF8F"><U><B>@HolidayID@</B></U></FONT></a></TD>
    <TD><FONT COLOR=WHITE>@HolidayData?AREAS@</FONT></TD>
    <TD><FONT COLOR=WHITE>@HolidayData?SCHEDULE@</FONT></TD>
    <TD><FONT COLOR=WHITE>@HolidayData?DURATION@ ticks</FONT></TD>
    </TR>
    @back@
    <TR>
    <TD COLSPAN=4>
    	<a href="javascript:Holiday(document.RESOURCES.NEWHOLIDAY.value+'&NEWHOLIDAY='+document.RESOURCES.NEWHOLIDAY.value)">
    	<FONT COLOR=CYAN><B><U>Create New:</U></a> <INPUT TYPE=TEXT NAME=NEWHOLIDAY SIZE=70></B></FONT>
    </TD>
    </TR>
    </TABLE>
    <P>
    <TABLE WIDTH=100% BORDER=0>
    <TR>
    <TD WIDTH=33% ALIGN=CENTER>
    </TD>
    <TD ALIGN=CENTER><INPUT TYPE=BUTTON NAME=REFRESH VALUE="Refresh" ONCLICK="Refresh();"></TD>
    <TD WIDTH=33% ALIGN=CENTER>
    </TD>
    </TR>
    </TABLE>
    <CENTER>
    </CENTER>
</FORM>
</BODY>
</HTML>
@endif@
@endif@
