    <STRING>underbrush</STRING>
    <STRING>brush</STRING>
    <STRING>brushwood</STRING>
    <STRING>bush</STRING>
    <STRING>underwood</STRING>
    <STRING>undergrowth</STRING>
</STRING>

<STRING id="noun_forest_wind" select="any-1">
    <STRING>wind</STRING>
    <STRING>breeze</STRING>
    <STRING>gust</STRING>
