    <STRING>vines</STRING>
    <STRING>brush</STRING>
    <STRING>overgrowth</STRING>
    <STRING>underwood</STRING>
    <STRING>undergrowth</STRING>
</STRING>

<STRING id="noun_jungle_wind_adj" select="any-1">
    <STRING>steamy</STRING>
    <STRING>stifling</STRING>
