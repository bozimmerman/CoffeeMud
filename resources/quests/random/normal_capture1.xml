	<QUEST_LOSESPEECH_TEXT>${j:1:quest_losespeech}</QUEST_LOSESPEECH_TEXT>
	<CAPTURABLES_RESPONSE>${j:1:quest_fightspeech}</CAPTURABLES_RESPONSE>
