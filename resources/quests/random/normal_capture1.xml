template: normal_capture1
settable vars: 
    template(normal_capture1)
    category(whatevs)
    area_name(area name)
    source_name(mob name)
    targetarea_name(area name)
    multiarea(yes or NO)
    targetname(mobs name)
    num_targets(num mobs to capture)
	aggression(YES,NO)
	xp_amount_awarded
	gold_amount_awarded
	quest_point_awarded(YES,NO)
