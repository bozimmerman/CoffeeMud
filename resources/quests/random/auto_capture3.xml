template: auto_capture3
settable vars: 
    template(auto_capture3)
    category(whatevs)
    targetarea_name(area name)
    targetname(mobs name)
	aggression(YES,NO)
	xp_amount_awarded
	gold_amount_awarded
	quest_point_awarded(YES,NO)
	reward_items()
	target_min_arealevel(#), target_max_arealevel(#)
	quest_multiple(YES, NO, or PREV)
