	<FREQUENCY>1</FREQUENCY>
	<DURATION>90 minutes</DURATION>
	<CATEGORY>$quest_category</CATEGORY>
	<CAPTURABLES_MASK>-HOME "+$target_area_name" -NAMES "+$target_name"</CAPTURABLES_MASK>
