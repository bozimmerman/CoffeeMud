		<STRING define="quest_surrenderspeech">$quest_generic_surrender_speeches</STRING>
		<STRING define="reason_desc" SELECT="Any-1">
			<STRING>${C:target_name} owes you money, but you're not sure where ${target_heshe} is.</STRING>
